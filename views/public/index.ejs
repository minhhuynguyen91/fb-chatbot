<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Trendy Threads - Premium Jacket</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Facebook SDK for Messenger -->
  <script>
    window.fbAsyncInit = function() {
      FB.init({
        xfbml: true,
        version: 'v13.0'
      });
      console.log('Facebook SDK initialized');
    };
    (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = 'https://connect.facebook.net/en_US/sdk/xfbml.customerchat.js';
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

    // Function to safely open chat dialog
    function openChatDialog() {
      if (typeof FB !== 'undefined' && FB.CustomerChat) {
        FB.CustomerChat.showDialog();
      } else {
        alert('Messenger chat is not available. Please try again later or message us directly on Facebook.');
        console.error('FB object not defined');
      }
    }

    // Log when SDK fails to load
    window.onload = function() {
      setTimeout(() => {
        if (typeof FB === 'undefined') {
          console.error('Facebook SDK failed to load');
        }
      }, 5000);
    };
  </script>
</head>
<body class="bg-gray-100 font-sans">
  <!-- Facebook Customer Chat -->
  <div id="fb-root"></div>
  <div
    class="fb-customerchat"
    attribution="setup_tool"
    page_id="<%= PAGE_ID %>"
    theme_color="#4B0082"
    logged_in_greeting="Hi! Ask about our clothing or type 'help' for options!"
    logged_out_greeting="Hi! Log in to chat about our clothing!"
  ></div>

  <!-- Header -->
  <header class="bg-indigo-600 text-white py-4">
    <div class="container mx-auto px-4 flex justify-between items-center">
      <h1 class="text-2xl font-bold">Trendy Threads</h1>
      <nav>
        <a href="#" class="px-4 hover:underline">Home</a>
        <a href="#" class="px-4 hover:underline">Shop</a>
        <a href="#" class="px-4 hover:underline">Contact</a>
      </nav>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="container mx-auto px-4 py-12 flex flex-col md:flex-row items-center">
    <!-- Product Image -->
    <div class="md:w-1/2">
      <img
        src="https://images.unsplash.com/photo-1591047139829-d91aecb6caea?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
        alt="Premium Jacket"
        class="w-full rounded-lg shadow-lg"
      >
    </div>
    <!-- Product Details -->
    <div class="md:w-1/2 mt-8 md:mt-0 md:pl-8">
      <h2 class="text-3xl font-bold text-gray-800">Premium Urban Jacket</h2>
      <p class="text-xl text-indigo-600 mt-2">$89.99</p>
      <p class="text-gray-600 mt-4">
        Elevate your style with our Premium Urban Jacket. Crafted from high-quality materials, this jacket offers a perfect blend of comfort and durability. Ideal for city adventures or casual outings.
      </p>
      <ul class="mt-4 text-gray-600 list-disc list-inside">
        <li>Water-resistant fabric</li>
        <li>Soft inner lining</li>
        <li>Available in S, M, L, XL</li>
        <li>Multiple color options</li>
      </ul>
      <button class="mt-6 bg-indigo-600 text-white py-2 px-6 rounded-lg hover:bg-indigo-700">
        Add to Cart
      </button>
      <p class="mt-4 text-gray-500">
        Questions? <a href="#" class="text-indigo-600 hover:underline" onclick="openChatDialog()">Chat with our AI bot</a> for instant help!
      </p>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-6">
    <div class="container mx-auto px-4 text-center">
      <p>Â© 2025 Trendy Threads. All rights reserved.</p>
      <p class="mt-2">
        <a href="#" class="hover:underline">Privacy Policy</a> |
        <a href="#" class="hover:underline">Terms of Service</a>
      </p>
    </div>
  </footer>
</body>
</html>